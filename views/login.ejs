<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Character encoding for proper text display -->
    <meta charset="UTF-8" />
    <!-- Ensure proper scaling on mobile devices -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Page title -->
    <title>Login</title>
    
    <!-- Include Bootstrap CSS for responsive styling -->
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
      crossorigin="anonymous"
    />
  </head>
  <body>
    
    <!-- Include the shared header partial -->
    <%- include('partials/_header', { userEmail: userEmail }) %>
    <!-- Passing the `userEmail` variable ensures the header can display personalized info -->

    <div class="container mt-4">
      <!-- Page heading -->
      <h2>Login</h2>
      <!-- Login form that sends a POST request to the server -->
      <form method="POST" action="/login">
        <div class="form-group">
          <!-- Input for email address -->
          <label for="email">Email:</label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Enter your email"
            class="form-control"
            required
          />
        </div>
        <div class="form-group">
          <!-- Input for password -->
          <label for="password">Password:</label>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Enter your password"
            class="form-control"
            required
          />
        </div>
        <!-- Submit button to trigger the login -->
        <button type="submit" class="btn btn-primary">Login</button>
      </form>
    </div>
  </body>
</html>



