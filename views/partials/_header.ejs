<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>

      <% if (username) { %>
        <span class="navbar-text text-light">
          Welcome, <%= username %>!
        </span>
        <!-- Logout Form -->
        <form method="POST" action="/logout" class="d-flex align-items-center ml-2">
          <button type="submit" class="btn btn-danger btn-sm">Logout</button>
        </form>
      <% } else { %>
        <!-- Login Form -->
        <div class="ml-auto">
          <form 
            method="POST" 
            action="/login" 
            class="d-flex align-items-center"
          >
            <input
              type="text"
              name="username"
              placeholder="Username"
              class="form-control me-2"
              style="width: auto;"
            />  
            <button type="submit" class="btn btn-success btn-sm">Login</button>
          </form>
        </div>
      <% } %>
    </div>
  </nav>
</header>
