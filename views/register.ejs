<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Character encoding for proper text display -->
  <meta charset="UTF-8">
  <!-- Ensures proper scaling on mobile devices -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Page title -->
  <title>Register</title>
  
  <!-- Include Bootstrap CSS for responsive design -->
  <link
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
    crossorigin="anonymous"
  />
</head>
<body>

  <!-- Include the shared header partial -->
  <%- include('partials/_header', { userEmail: userEmail }) %>
  <!-- Passing `userEmail` ensures the header displays personalized user information if available -->

  <div class="container mt-4">
    <!-- Page heading for registration -->
    <h2>Create Account</h2>
    <!-- Registration form sending data via POST request -->
    <form action="/register" method="POST">
      <div class="form-group">
        <!-- Input field for email -->
        <label for="email">Email Address</label>
        <input
          type="email"
          name="email"
          id="email"
          placeholder="Enter your email"
          class="form-control"
          required
        />
      </div>
      <div class="form-group">
        <!-- Input field for password -->
        <label for="password">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          placeholder="Enter your password"
          class="form-control"
          required
        />
      </div>
      <!-- Submit button to create an account -->
      <button type="submit" class="btn btn-primary">Register</button>
    </form>
  </div>
</body>
</html>



